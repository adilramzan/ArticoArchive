<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/archive_one_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArchiveOne"
        tools:targetApi="35">
        <activity
            android:name=".presentation.activity.AddArticleActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activity.ViewArticleActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.ArchiveOne"/>
        <activity
            android:name=".presentation.activity.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.ArchiveOne"/>

        <activity
            android:name=".presentation.activity.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.ArchiveOne.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>